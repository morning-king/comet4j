<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Comet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <mime-mapping>
    <extension>air</extension>
    <mime-type>application/air</mime-type>
  </mime-mapping>
  <filter>
    <description>编码过滤</description>
    <filter-name>encodingfilter</filter-name>
    <filter-class>org.comet4j.core.util.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  
 
  
  <!--Comet参数配置-->
   <listener>
    <description>应用程序事件监听</description>
    <listener-class>org.comet4j.core.CometAppListener</listener-class>
  </listener>
  <servlet>
    <description>Comet连接[默认:org.comet4j.core.CometServlet]</description>
    <display-name>CometServlet</display-name>
    <servlet-name>CometServlet</servlet-name>
    <servlet-class>org.comet4j.core.CometServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CometServlet</servlet-name>
    <url-pattern>/conn</url-pattern>
  </servlet-mapping>
  <context-param>
    <description>Comet引擎[默认:org.comet4j.core.CometEngine]</description>
    <param-name>Comet.CometEngine</param-name>
    <param-value>org.comet4j.core.CometEngine</param-value>
  </context-param>
  <context-param>
    <description>语言[目前只支持：zh,en两种,默认:zh，详细http://www.loc.gov/standards/iso639-2/php/English_list.php]</description>
    <param-name>Comet.Language</param-name>
    <param-value>zh</param-value>
  </context-param>
  <context-param>
    <description>连接超时时间/微妙[默认:60000,1分钟]</description>
    <param-name>Comet.Timeout</param-name>
    <param-value>1000</param-value>
  </context-param>
  <context-param>
    <description>缓存信息过期时间/微妙[默认:3600000,1小时]</description>
    <param-name>Comet.CacheExpires</param-name>
    <param-value>6000</param-value>
  </context-param>
  <context-param>
    <description>缓存信息过期检查频率/微妙[默认:3600000,1小时]</description>
    <param-name>Comet.CacheFrequency</param-name>
    <param-value>6000</param-value>
  </context-param>
  <context-param>
    <description>连接过期时间/微妙[默认:60000,1分钟]注意：连接过期时间至少应大于连接超时时间</description>
    <param-name>Comet.ConnExpires</param-name>
    <param-value>6000</param-value>
  </context-param>
  <context-param>
    <description>连接过期检查频率/微妙[默认:60000,1分钟]注意：时间越短，即时性越高，但性能消耗越大</description>
    <param-name>Comet.ConnFrequency</param-name>
    <param-value>6000</param-value>
  </context-param>
  <context-param>
    <description>连接模式[auto(默认)/stream/lloop]</description>
    <param-name>Comet.WorkStyle</param-name>
    <param-value>auto</param-value>
  </context-param>
  <context-param>
    <description>开启调试[false(默认)/true]</description>
    <param-name>Comet.Debug</param-name>
    <param-value>true</param-value>
  </context-param>
  <!--Comet参数完毕-->
  
  <!--配置comet应用扩展 
  <listener>
    <description>应用程序事件监听</description>
    <listener-class>org.comet4j.core.demo.hello.RegisterListenner</listener-class>
  </listener>
-->
  
</web-app>